root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.pug]
trim_trailing_whitespace = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.svg]
insert_final_newline = false

[*.json]
insert_final_newline = false
