{
  "name": "vite-static-boilerplate-01",
  "private": true,
  "version": "0.0.0",
  "description": "vite-static-boilerplate-01",
  "author": "macropygia",
  "license": "Unlicense",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --emptyOutDir",
    "preview": "vite preview",
    "eslint": "eslint --fix ./src/**/*.{js,jsx,ts,tsx,mjs,cjs}",
    "prettier:pug": "prettier --plugin=@prettier/plugin-pug --parser=pug --write \"src/**/*.pug\"",
    "stylelint": "stylelint -f verbose --fix \"src/**/*.scss\"",
    "lint": "run-s eslint stylelint prettier:pug"
  },
  "lint-staged": {
    "src/**/*.pug": [
      "prettier --plugin=@prettier/plugin-pug --parser=pug --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "src/**/*.scss": [
      "stylelint --fix --quiet"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@macropygia/vite-plugin-connect-middleware": "^0.0.4",
    "@macropygia/vite-plugin-glob-input": "^0.0.13",
    "@macropygia/vite-plugin-imagemin-cache": "^0.0.11",
    "@macropygia/vite-plugin-pug-static": "^0.0.15",
    "@prettier/plugin-pug": "^2.1.1",
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/node": "^18.0.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.7",
    "css-declaration-sorter": "^6.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-csso": "^6.0.0",
    "postcss-sort-media-queries": "^4.2.1",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "sass": "^1.53.0",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.0"
  }
}